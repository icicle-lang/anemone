name:                  ambiata-anemone
version:               0.0.1
license:               Apache-2.0
author:                Ambiata <info@ambiata.com>
maintainer:            Ambiata <info@ambiata.com>
copyright:             (c) 2016 Ambiata.
synopsis:              Sea creatures: a collection of C functions, packaged as a Haskell library, with QuickCheck for testing.
category:              System
cabal-version:         >= 1.8
build-type:            Simple
description:           The C standard library (libc) is rubbish and slow.
                       .
                       We have been writing a few general purpose functions in C,
                       for example int parsing, memory comparison, and some
                       file-handling buffer stuff.
                       .
                       I would like a repository where I can put different versions
                       of these functions, with benchmarks, and quickcheck tests
                       without muddying up Icicle, but it would have to be open source.

extra-source-files:
    csrc/*.h
    csrc/*.c


library
  build-depends:
                       base                            >= 3          && < 5
                     , ambiata-p
                     , bytestring                      == 0.10.*
                     , filepath                        >= 1.3        && < 1.5
                     , file-embed                      == 0.0.9
                     , text                            == 1.2.*
                     , thyme                           >= 0.3        && < 0.4
                     , transformers                    >= 0.3        && < 0.6
                     , vector                          >= 0.10       && < 0.13
  ghc-options:
                       -Wall

  hs-source-dirs:
                       src

  exposed-modules:
                       Anemone.Foreign.Atoi
                       Anemone.Foreign.Data
                       Anemone.Foreign.FFI
                       Anemone.Foreign.Grisu2
                       Anemone.Foreign.Hash
                       Anemone.Foreign.Memcmp
                       Anemone.Foreign.Memcmp.Base
                       Anemone.Foreign.Memcmp.Export
                       Anemone.Foreign.Mempool
                       Anemone.Foreign.Pack
                       Anemone.Foreign.Segv
                       Anemone.Foreign.Strtod
                       Anemone.Foreign.Time
                       Anemone.Foreign.VInt

                       Anemone.Parser
                       Anemone.Pretty

                       Anemone.Embed

  include-dirs:
                       csrc

  install-includes:
                       anemone_atoi.h
                       anemone_atoi_sse.h
                       anemone_base.h
                       anemone_ffi.h
                       anemone_grisu2.h
                       anemone_hash.h
                       anemone_memcmp.h
                       anemone_memcmp_zoo.h
                       anemone_mempool.h
                       anemone_pack.h
                       anemone_sse.h
                       anemone_strtod.h
                       anemone_twiddle.h
                       anemone_vint.h

  includes:
                       anemone_atoi.h
                       anemone_atoi_sse.h
                       anemone_base.h
                       anemone_ffi.h
                       anemone_grisu2.h
                       anemone_hash.h
                       anemone_memcmp.h
                       anemone_memcmp_zoo.h
                       anemone_mempool.h
                       anemone_pack.h
                       anemone_sse.h
                       anemone_strtod.h
                       anemone_twiddle.h
                       anemone_vint.h

  c-sources:
                       csrc/anemone_atoi.c
                       csrc/anemone_atoi_sse.c
                       csrc/anemone_ffi.c
                       csrc/anemone_grisu2.c
                       csrc/anemone_hash.c
                       csrc/anemone_memcmp.c
                       csrc/anemone_mempool.c
                       csrc/anemone_pack.c
                       csrc/anemone_segv.c
                       csrc/anemone_strtod.c
                       csrc/anemone_time.c
                       csrc/anemone_vint.c

  cc-options:
                       -std=c99 -O3 -msse4.2 -Wall -Werror -Wno-unused-command-line-argument -DCABAL=1


test-suite test
  type:                exitcode-stdio-1.0

  main-is:             test.hs

  ghc-options:         -Wall -threaded -O2

  hs-source-dirs:
                       test

  other-modules:
                       Test.Anemone.Foreign.Atoi
                       Test.Anemone.Foreign.Hash
                       Test.Anemone.Foreign.Memcmp
                       Test.Anemone.Foreign.Mempool
                       Test.Anemone.Foreign.Pack
                       Test.Anemone.Foreign.Strtod
                       Test.Anemone.Foreign.Time
                       Test.Anemone.Foreign.VInt
                       Test.Anemone.Roundtrip

  build-depends:
                       base                            >= 3          && < 5
                     , ambiata-anemone
                     , ambiata-p
                     , array
                     , bytestring
                     , ieee754
                     , QuickCheck
                     , quickcheck-instances
                     , hedgehog
                     , hedgehog-quickcheck
                     , text
                     , thyme
                     , vector

  c-sources:
                       ctest/test_mempool.c

  cc-options:
                       -std=c99 -O3 -msse4.2 -Wall -Werror -Wno-unused-command-line-argument -DCABAL=1


benchmark bench
  type:                exitcode-stdio-1.0

  main-is:             bench.hs

  ghc-options:         -Wall -threaded -O2

  hs-source-dirs:
                       bench

  build-depends:
                       base                            >= 3          && < 5
                     , ambiata-anemone
                     , ambiata-p
                     , bytestring
                     , criterion
                     , hashable
                     , old-locale
                     , text
                     , thyme

  c-sources:
                       cbench/bench_memcmp.c
                       cbench/bench_atoi.c
                       cbench/bench_strtod.c

  cc-options:
                       -std=c99 -O3 -msse4.2 -Wall -Werror -Wno-unused-command-line-argument -DCABAL=1
